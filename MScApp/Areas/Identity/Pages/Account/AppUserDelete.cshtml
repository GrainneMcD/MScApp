@page "{UserID}"
@model MScApp.Areas.Identity.Pages.Account.AppUserDeleteModel
@{
    var role = "";

    @if (Model.AppUser.IsAdmin)
    {
        role = "Admin";
    }
    else
    {
        role = "Applicant";
    }
}

<jumbotron>
    <div class="alert alert-danger">
        <div>
            <h1>Are you sure you want to delete this @role User?</h1>
            <p class="lead">The details for this @role User are: </p>
        </div>

        <hr class="my-4">

        <div class="row">
            <div class="col">
                <h5><strong>AppUserID : </strong></h5>
                <p>@Model.AppUser.Id</p>
            </div>
            <div class="col">
                <h5><strong>Role : </strong></h5>
                <p>@role</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h5><strong>Full Name: </strong></h5>
                <p>@Model.AppUser.FirstName  @Model.AppUser.LastName</p>
            </div>
            <div class="col">
                <h5><strong>Email: </strong></h5>
                <p>@Model.AppUser.Email</p>

            </div>
        </div>
    </div>
</jumbotron>

<form method="post">
    <a asp-page="BulkRegister" class="btn btn-lg btn-secondary float-left">Cancel</a>
    <button type="submit" class="btn btn-lg btn-danger float-right">
        <i class="delete material-icons md-36n align-bottom">delete</i>
        <span>Delete</span>
    </button>
</form>
