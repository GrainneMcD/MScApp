@page "{QuestionID:int}"
@model MScApp.Pages.Questions.DeleteModel
@{
    ViewData["Title"] = "Delete Question";
}


<jumbotron>
    <div class="alert alert-danger">

        <div>
            <h1>Are you sure you want to delete this question?</h1>

            <p class="lead">The details for this question are: </p>
        </div>

        <hr class="my-4">

        <div>
            <h4><strong>Question : </strong></h4>
            <p>@Html.Raw(Model.Question.QuestionBody)</p>
        </div>

        <hr />

        <div>
            <h4><strong>Answers:</strong></h4>
            <ul>
                @foreach (var answer in @Model.Question.Answers)
                {

                    <li><p>@answer.AnswerBody</p></li>

                }
            </ul>
        </div>
    </div>
    <form method="post">
        <a asp-page="List" class="btn btn-lg btn-secondary float-left">
            Cancel
        </a>
        <button type="submit" class="btn btn-lg btn-danger float-right ">
            <i class="delete material-icons md-36n align-bottom">delete</i>
            <span>Delete</span>
        </button>
    </form>
</jumbotron>