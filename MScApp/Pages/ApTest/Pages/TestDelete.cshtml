@page "{TestID:int?}"
@model MScApp.Pages.ApTest.Pages.TestDeleteModel
@{
    ViewData["Title"] = "Delete Test";
}

<jumbotron>
    <div class="alert alert-danger">
        <div>
            <h1>Are you sure you want to delete this test?</h1>
            <p class="lead">The details for this test are: </p>
        </div>

        <hr class="my-4">

        <div>
            <p><strong>Test Name : </strong>    @Model.Test.TestName</p>
            <p><strong>Date : </strong>         @Model.Test.Date.ToString("dddd, dd MMMM yyyy")</p>
            <p><strong>Time : </strong>         @Model.Test.Time.ToString("hh: mm tt")</p>
        </div>
    </div>
</jumbotron>

<form method="post">
    <a asp-page="TestList" class="btn btn-lg btn-secondary float-left">Cancel</a>
    <button type="submit" class="btn btn-lg btn-danger float-right">
        <i class="delete material-icons md-36n align-bottom">delete</i>
        <span>Delete</span>
    </button>
</form>
